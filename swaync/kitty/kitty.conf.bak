# -----------------------------------------------------------------------------
# FONT SETTINGS
# -----------------------------------------------------------------------------
font_family      0xProto Nerd Font
bold_font        0xProto Nerd Font
italic_font      0xProto Nerd Font Italic
bold_italic_font 0xProto Nerd Font Italic
font_size        11.5

# -----------------------------------------------------------------------------
# CURSOR
# -----------------------------------------------------------------------------
cursor_shape            underline
cursor_blink_interval   0.5
cursor                  #caa9fa
cursor_text_color       #000000

# -----------------------------------------------------------------------------
# SCROLLBACK
# -----------------------------------------------------------------------------
scrollback_lines 10000

# -----------------------------------------------------------------------------
# MOUSE
# -----------------------------------------------------------------------------
mouse_hide_wait 3.0

# -----------------------------------------------------------------------------
# WINDOW LAYOUT
# -----------------------------------------------------------------------------
background_opacity 0.90
remember_window_size  no
initial_window_width  100c
initial_window_height 30c
window_padding_width   4

# -----------------------------------------------------------------------------
# SHELL
# -----------------------------------------------------------------------------
shell /usr/bin/fish

# -----------------------------------------------------------------------------
# KEY BINDINGS
# -----------------------------------------------------------------------------
map ctrl+shift+c        copy_to_clipboard
map ctrl+shift+v        paste_from_clipboard
map shift+insert        paste_from_selection
map ctrl+equal          change_font_size all +2.0
map ctrl+plus           change_font_size all +2.0
map ctrl+minus          change_font_size all -2.0
map ctrl+0              change_font_size all 0

# -----------------------------------------------------------------------------
# TAB BAR
# -----------------------------------------------------------------------------
tab_bar_edge bottom
tab_bar_style powerline
tab_powerline_style angled
tab_title_template " {index}: {title} "
tab_bar_min_tabs 2

active_tab_background    #000000
active_tab_foreground    #caa9fa
inactive_tab_background  #000000
inactive_tab_foreground  #575b70

active_border_color      #caa9fa
inactive_border_color    #575b70

# -----------------------------------------------------------------------------
# COLORS (Catppuccin Mocha OLED)
# -----------------------------------------------------------------------------
background #000000
foreground #CDD6F4

selection_background #2A2B3C
selection_foreground #CDD6F4

cursor #B4BEFE
cursor_text_color #000000

url_color #89B4FA

