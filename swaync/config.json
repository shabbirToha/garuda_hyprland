{
  "$schema": "/etc/xdg/swaync/configSchema.json",

  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",

  "control-center-width": 420,
  "control-center-height": 650,
  "control-center-margin-top": 18,
  "control-center-margin-right": 18,

  "notification-window-width": 380,
  "notification-window-margin-top": 18,
  "notification-window-margin-right": 18,

  "timeout": 6,
  "timeout-low": 4,
  "timeout-critical": 0,

  "hide-on-clear": true,
  "fit-to-screen": true,

  "notification-icon-size": 48,

  "widgets": [
    "title",
    "dnd",
    "notifications",
    "mpris",
    "volume",
    "backlight"
  ],

  "widget-config": {
    "title": {
      "text": "Notifications"
    }
  }
}

